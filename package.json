{
  "name": "blog-udcxx-me",
  "version": "1.0.0",
  "description": "for https://blog.udcxx.me/",
  "author": "udcxx",
  "private": true,
  "scripts": {
    "dev": "nuxt",
    "build": "nuxt build",
    "start": "nuxt start",
    "generate": "nuxt generate",
    "md": "processmd \"./src/_BLOG/markdown/*\" --stdout --outputDir ./src/_BLOG/json/ > src/_BLOG/json/summary.json",
    "upload": "node ftp-upload.js",
    "copy": "cpx src/_BLOG/json/summary.json dist",
    "blog": "run-s md generate copy upload"
  },
  "husky": {
    "hooks": {
      "pre-push": "node prepush.js"
    }
  },
  "dependencies": {
    "@nuxtjs/google-adsense": "^1.1.3",
    "@nuxtjs/google-gtag": "^1.0.4",
    "@nuxtjs/markdownit": "^1.2.6",
    "cpx2": "^4.2.0",
    "husky": "^4.2.3",
    "nuxt": "^2.14.7",
    "processmd": "^4.6.3",
    "sass-loader": "^10.2.0"
  },
  "devDependencies": {
    "chokidar": "^3.3.0",
    "ftp-deploy": "^2.3.6",
    "imagemin": "^7.0.1",
    "imagemin-gifsicle": "^6.0.1",
    "imagemin-keep-folder": "^5.3.2",
    "imagemin-mozjpeg": "^8.0.0",
    "imagemin-pngquant": "^8.0.0",
    "imagemin-svgo": "^7.0.0",
    "minimatch": "^3.0.2",
    "npm-run-all": "^4.1.5",
    "pug": "^2.0.4",
    "pug-loader": "^2.4.0",
    "pug-plain-loader": "^1.0.0",
    "sass": "^1.60.0"
  }
}
